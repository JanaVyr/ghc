{% extends '_base.twig' %}
{% block navigation %}
    {% include "__navigation.twig" with {'home': 'active'} %}
{% endblock %}


{% block content %}
    <main class="main mt-4">
        <div class="container">
                <h1 class="text-uppercase">Generic Hipster Coffee</h1>
                <p class="h2 text-uppercase">Specialty Coffee, Fresh Food &amp; Local Community.</p>
                <img
                    class="img-fluid"
                    sizes="(min-width: 1200px) 1090px,
                            (min-width: 992px) 910px,
                            (min-width: 768px) 670px,
                            (min-width: 576px) 490px,
                            calc(100vw - 2*25)
                            "
                    srcset="
                    /img/counter_bsswx4_c_scale,w_270.jpg 270w,
                    /img/counter_bsswx4_c_scale,w_750.jpg 750w,
                    /img/counter_bsswx4_c_scale,w_1060.jpg 1060w,
                    /img/counter_bsswx4_c_scale,w_1350.jpg 1350w,
                    /img/counter_bsswx4_c_scale,w_1599.jpg 1599w,
                    /img/counter_bsswx4_c_scale,w_1858.jpg 1858w,
                    /img/counter_bsswx4_c_scale,w_2062.jpg 2062w,
                    /img/counter_bsswx4_c_scale,w_2180.jpg 2180w"
                    src="/img/counter_bsswx4_c_scale,w_1350.jpg"
                    alt="Generic Hipster Coffee Counter">
            <div class="row my-4">
                <div class="col-sm-auto col-md-auto col-lg-4  mb-4 mb-md-0">
                    <h3 class="h4 text-uppercase">Opening Hours</h3>
                    <p class="mb-0">Sunday to Thursday: 8 am to 11 pm</p>
                    <p class="mb-0">Friday to Saturday: 8 am to 1 am</p>
                </div>
                <div class="col-sm-auto col-lg-4 mb-4 mb-md-0">
                    <h3 class="h4 text-uppercase">Book A Table</h3>
                    <p class="mb-0">Call <a href="tel:+14153214567" class="d-md-none">+1 415-321-4567</a><span class="d-none d-md-inline-block">+1 415-321-4567</span></p>
                </div>
                <div class="col-sm-auto col-lg-4">
                    <h3 class="h4 text-uppercase">Address</h3>
                    <p class="mb-0">321 Ivy St.</p>
                    <p class="mb-0">San Francisco, CA 94102</p>
                </div>
            </div>
            <div class="embed-responsive embed-responsive-16by9 ghc-mb--50px">
                <div class="embed-responsive-item" id="map"></div>
            </div>
        </div>
    </main>
{% endblock %}


